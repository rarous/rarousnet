{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:postcss",
    "group:aws-sdk-js-v3Monorepo",
    ":dependencyDashboard"
  ],
  "automerge": true,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint"]
    },
    {
      "groupName": "pulumi",
      "matchPackagePrefixes": ["@pulumi/"]
    }
  ]
}
