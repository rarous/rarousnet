                d="m45.934 19.834 1.297-1.2s3.297 5.373 3.297 13.727c0 10.508-3.893 15.517-3.893 15.517l-1.153-1.216s3.276-5.61 3.32-14.285c.036-7.155-2.868-12.543-2.868-12.543z"/>
