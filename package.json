{
  "name": "rarousnet",
  "description": "rarous.net website",
  "type": "module",
  "private": true,
  "main": "gulpfile.js",
  "license": "EPL-2.0",
  "browserslist": [
    "> 5%",
    "last 4 versions"
  ],
  "dependencies": {
    "feed": "4.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20231218.0",
    "@types/browser-sync": "2.29.0",
    "ava": "6.0.1",
    "broken-link-checker-local": "0.2.1",
    "browser-sync": "3.0.2",
    "cssnano": "6.0.2",
    "dprint": "0.45.0",
    "gulp": "4.0.2",
    "gulp-htmlmin": "5.0.1",
    "gulp-if": "3.0.0",
    "gulp-notify": "4.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rev": "11.0.0",
    "gulp-rev-delete-original": "0.2.3",
    "gulp-rev-replace": "0.4.4",
    "gulp-sizereport": "1.2.1",
    "lighthouse": "11.4.0",
    "local-web-server": "5.3.0",
    "npm-run-all": "4.1.5",
    "open-props": "1.6.16",
    "pagefind": "1.0.4",
    "postcss": "8.4.32",
    "postcss-jit-props": "1.0.14",
    "postcss-preset-env": "9.3.0",
    "tap-xunit": "2.4.1",
    "wrangler": "3.22.1"
  },
  "scripts": {
    "build:website": "cd generator && clojure -M -m rarousnet.generator ../",
    "build:assets": "gulp -p",
    "build:index": "pagefind --site ./dist",
    "build": "run-s 'build:*'",
    "fmt": "dprint fmt \"**/*.{md,mjs,js,json}\"",
    "serve": "ws --compress --http2 -d ./dist",
    "start": "gulp dev",
    "sync": "wrangler pages deploy ./dist --project=rarousnet --environment=production",
    "test:lighthouse:init": "mkdir ./results",
    "test:lighthouse:root": "lighthouse https://localhost:8000/ --config-path .lighthouse.json --output json --output html --output-path ./results/root.html --chrome-flags=\"--headless --ignore-certificate-errors\"",
    "test:lighthouse:weblog": "lighthouse https://localhost:8000/weblog/ --config-path .lighthouse.json --output json --output html --output-path ./results/weblog.html --chrome-flags=\"--headless --ignore-certificate-errors\"",
    "test:lighthouse": "run-s 'test:lighthouse:*'",
    "test:ava": "ava | tap-xunit > ./results/ava.xml",
    "test:broken-links": "blcl ./dist -ro"
  },
  "workspaces": [
    "cards",
    "infrastructure",
    "scripts"
  ],
  "packageManager": "yarn@4.0.2"
}
