{
  "name": "rarousnet",
  "description": "rarous.net website program",
  "main": "index.js",
  "license": "EPL-2.0",
  "browserslist": [
    "> 5%",
    "last 4 versions",
    "IE 8"
  ],
  "dependencies": {
    "@pulumi/aws": "<=2.0",
    "@pulumi/pulumi": "<=2.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "ava": "^3.5.1",
    "broken-link-checker-local": "^0.2.1",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "esm": "^3.2.25",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-replace": "^0.4.4",
    "gulp-sizereport": "^1.2.1",
    "lighthouse": "^5.6.0",
    "local-web-server": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "puppeteer": "2.1",
    "tap-xunit": "^2.4.1"
  },
  "scripts": {
    "prebuild:website": "docker build -t rarousnet ./.circleci/docker/cci-openjdk11-php7-clojure-tools-deps",
    "build:website": "docker run -v `pwd`:/usr/app/src -t rarousnet /bin/sh -c \"cd /usr/app/src/generator && clojure -m rarousnet.generator ../\"",
    "build:assets": "gulp -p",
    "build": "run-s build:*",
    "serve": "ws --compress --http2 -d ./dist",
    "start": "gulp dev",
    "sync": "aws s3 sync --profile rarous s3://www.rarous.net ./dist",
    "test:lighthouse:root": "lighthouse https://localhost:8000/ --config-path .lighthouse.json --output json --output html --output-path ./results/root.html --chrome-flags=\"--headless\"",
    "test:lighthouse:weblog": "lighthouse https://localhost:8000/weblog/ --config-path .lighthouse.json --output json --output html --output-path ./results/weblog.html --chrome-flags=\"--headless\"",
    "test:lighthouse": "run-s test:lighthouse:*",
    "test:ava": "ava | tap-xunit > ./results/ava.xml",
    "test:broken-links": "blcl ./dist -ro"
  }
}
